@model IEnumerable<Like>

<div>
    @foreach (Like likers in Model)
    {
        <div class="my-3 text-light" style="display:flex;justify-content:space-between;align-items:center">
            <div style="display:flex;justify-content:start;align-items:center">
                <div style="margin-right">
                    <img style="width:50px;height:50px;border-radius:25px;object-fit:cover" src="~/assets/Photos/ProfilePhotos/@likers.User.ProfilePhotoUrl" alt="">
                </div>
                <a asp-controller="profile" asp-action="userprofile" asp-route-id="@likers.UserId" style="text-decoration: none; color: #fff;"><span class="postOwnerName">@likers.User.UserName</span></a>
                @if (likers.User.HaveBlueTic)
                {
                    <i style="color: #3797F0;font-size: 16px;margin-left: 10px;" class="fas fa-check-circle"></i>
                }
                <div class="commentArea">
                </div>
            </div>
            <div>
                <span class="mx-2">@likers.CreatedAt?.ToString("dd MMMM HH:mm")</span>
            </div>
        </div>
    }
</div>
