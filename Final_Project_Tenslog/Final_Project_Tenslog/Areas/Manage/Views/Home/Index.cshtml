@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<!-- Sale & Revenue Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <a asp-controller="user" asp-action="index">
                <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-line fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">All Users</p>
                        <h6 class="mb-0">@Model.Users.Count()</h6>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-3">
            <a asp-controller="Posts" asp-action="index">
                <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-bar fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Total Posts</p>
                        <h6 class="mb-0">@(Model.Posts.Count() == null ? "0" : Model.Posts.Count())</h6>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-3">
            <a asp-controller="Posts" asp-action="index">
                <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-area fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Today Posts</p>
                        <h6 class="mb-0">@(Model.Posts.Where(p => p.CreatedAt >= DateTime.UtcNow.AddDays(-1)).Count() == null ? "0" : Model.Posts.Where(p => p.CreatedAt >= DateTime.UtcNow.AddDays(-1)).Count())</h6>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-xl-3">
            <a asp-controller="Support" asp-action="index">
                <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-pie fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Total Help Requests</p>
                        <h6 class="mb-0">@(Model.Supports.Count() == null ? "0" : Model.Supports.Count())</h6>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
<!-- Sale & Revenue End -->
<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Users</h6>
            <a asp-controller="User" asp-action="Index">Show All</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col">Username</th>
                        <th scope="col">Name & SurName</th>
                        <th scope="col">IsVerificated</th>
                        <th scope="col">Post Count</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @await Html.PartialAsync("_UsersPartial.cshtml",Model.Users)
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Recent Sales End -->
